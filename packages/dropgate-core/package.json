{
  "name": "@dropgate/core",
  "version": "3.0.5",
  "description": "Headless Dropgate client library for file uploads and P2P transfers.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./p2p": {
      "import": {
        "types": "./dist/p2p/index.d.ts",
        "default": "./dist/p2p/index.js"
      },
      "require": {
        "types": "./dist/p2p/index.d.cts",
        "default": "./dist/p2p/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "peerjs": "^1.5.0"
  },
  "peerDependenciesMeta": {
    "peerjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "happy-dom": "^20.4.0",
    "msw": "^2.12.7",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "author": "Diamond Digital Development <https://diamonddigital.dev>",
  "funding": {
    "type": "buymeacoffee",
    "url": "https://www.buymeacoffee.com/willtda"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/WillTDA/Dropgate.git",
    "directory": "packages/dropgate-core"
  },
  "keywords": [
    "dropgate",
    "file-transfer",
    "p2p",
    "webrtc",
    "encryption",
    "e2ee"
  ],
  "dependencies": {
    "fflate": "^0.8.2"
  }
}